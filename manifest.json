{
  "manifest_version": 3,
  "name": "Website Time Track",
  "version": "1.0",
  "description": "Track time spent on websites.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "icons":{
    "64": "icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
